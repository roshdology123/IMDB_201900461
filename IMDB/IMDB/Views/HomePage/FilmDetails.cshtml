@model IMDB.ViewModel.FilmDetailsViewModel

@{
    ViewBag.Title = "Film Details";
    Layout = "~/Views/Shared/_MainLayoutPage.cshtml";
}



<!DOCTYPE html>

<html lang="en">
<head>
