    @section navbar{}

    <div class="film-container">
        <div class="film-container-details">
            <ul class="film-container-details-block">
                <ul class="film-container-details-rating">
                    <li class="film-container-details-rating-item">Rate</li>
                    <li class="film-container-details-rating-item">
                        <img style="width:32px; cursor:pointer;" src="~/Content/Images/icons8-like-64 (1).png" />
                        <img style="width:32px; cursor:pointer;" src="~/Content/Images/icons8-dislike-64.png" />
                    </li>
                </ul>


            </ul>
            <h1 class="film-container-details-title">@Model.Movie.Movie_Name</h1>



            <div class="film-container-images">
                <ul class="film-container-images-list">
                    <li><img src="@String.Format("data:image/png;base64,{0}", Convert.ToBase64String(Model.Movie.Img))" /></li>
                    <li style="margin-left: 5px;">
                        <iframe width="820" height="562" frameborder="0"
                                src="@Model.Movie.Movie_TLink"></iframe>
                    </li>
                </ul>
            </div>

            <div class="film-container-desc">
                <p style="color:white; padding-top: 10px; padding-bottom:10px; font-size:large">
                    The aging patriarch of an organized crime dynasty in postwar
                    New York City transfers control of his clandestine empire to his reluctant youngest son.
                </p>
                <hr style="width:50%;text-align:left;margin-left:0;">

                <h2 style="color:white; font-size:large; display: inline-block; padding-bottom:8px; padding-top: 8px; "> Directors </h2>
                <ul class="person-director">
                    <li class="person-director-item"> Francis Ford Coppola </li>
                </ul>

                <hr style="width:50%;text-align:left;margin-left:0; ">

                <h2 style="color:white; font-size:large;display: inline-block; padding-bottom:8px; padding-top: 8px;"> Writers</h2>
                <ul class="person-writer">
                    <li class="person-writer-item"> Mario Puzo </li>
                    <li class="person-writer-item"> Francis Ford Copploa</li>
                </ul>

                <hr style="width:50%;text-align:left;margin-left:0;">

                <h2 style="color:white; font-size:large; display: inline-block; padding-bottom:8px; padding-top: 8px;"> Stars</h2>
                <ul class="person-star">
                    <li class="person-star-item"> Marlon Brando </li>
                    <li class="person-star-item"> Al Pacino </li>
                    <li class="person-star-item"> James Caan </li>
                </ul>

            </div>

        </div>

    </div>
