            <!--....................... Favorite Movies ............................-->
            <br />
            <div class="DHead2"><b>Favorite Movies</b></div>
            <div class="FavoMovies">
                <div class="FloatMovie">
                    <img class="Movie" src="~/Content/Images/End Game.png" />
                    <h3>End Game</h3>
                    <button class="RemoveButton"><b>Remove Favorite</b></button>
                </div>
                <div class="FloatMovie">
                    <img class="Movie" src="~/Content/Images/Infinity War.jpeg" />
                    <h3>Infinity War</h3>
                    <button class="RemoveButton"><b>Remove Favorite</b></button>
                </div>
                <div class="FloatMovie">
                    <img class="Movie" src="~/Content/Images/Doctor Strange.jpg" />
