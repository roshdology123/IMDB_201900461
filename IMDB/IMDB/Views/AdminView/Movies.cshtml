@model IEnumerable<IMDB.Models.Movie>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/CSS/ShowMovies.css" rel="stylesheet" />
    <link href="~/Content/CSS/NavBarAdmin.css" rel="stylesheet" />
    <title>MoviesPage</title>
</head>
<body>
    @Html.Partial("NavBarAdmin")
    <div class="big">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Director.FName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movie_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Img)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Movie_TLink)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Director.FName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movie_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Img)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Movie_TLink)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Movie_ID }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Movie_ID }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Movie_ID })
                    </td>
                </tr>
            }

        </table>
    </div>
    <script src="~/Content/JS/Sayed.js"></script>
    <script src="~/Content/JS/upload.js"></script>
</body>
</html>


