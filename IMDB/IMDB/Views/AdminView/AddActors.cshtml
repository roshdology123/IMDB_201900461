@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/CSS/AddActors.css" rel="stylesheet" />
    <link href="~/Content/CSS/NavBar.css" rel="stylesheet" />
    <title>AddActorsPage</title>
</head>
<body>
    <div class="navbar">
        <div class="navbar-container">
            <div><a href="~/AdminView/AdminHomePage"><img src="~/Content/Images/imdb-logo.svg" class="logo"></a></div>
            <div class="menu-container">
                <ul class="menu-list">
                    <li>
                        <div class="dropdown">
                            <a href="#" title="Movies section" class="admin-menu">Movies</a>
                            <div class="dropdown-content">
                                @Html.ActionLink("Show All Movies", "Movies")
                                @Html.ActionLink("Add New Movie", "AddMovies")
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="dropdown">
                            <a href="#" title="Actors section" class="admin-menu">Actors</a>
                            <div class="dropdown-content">
                                @Html.ActionLink("Show All Actors", "Actors")
                                @Html.ActionLink("Add New Actor", "AddActors")
                            </div>
                        </div>
                    </li>
                    <li>
                        <div class="dropdown">
                            <a href="#" title="Directors section" class="admin-menu">Directors</a>
                            <div class="dropdown-content">
                                @Html.ActionLink("Show All Directors", "Directors")
                                @Html.ActionLink("Add New Director", "AddDirectors")
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="profile-container">
                <img class="profile-picture" src="~/Content/Images/man.png" alt="">
                <div class="profile-text-container">
                    <span class="profile-text">Admin</span>
                </div>
            </div>
        </div>
    </div>

    <div class="addform">
        <form action="/action_page.php">
            
            <label for="actorfirstname">Actor First Name:</label><br>
            <input type="text" id="actorfirstname" name="actorfirstname" placeholder="Enter Actor First Name"><br><br>
            <label for="actorlastname">Actor Last Name:</label><br>
            <input type="text" id="actorlastname" name="actorlastname" placeholder="Enter Actor Last Name"><br><br>
            <label for="age">Age:</label><br>
            <input type="text" id="age" name="age" placeholder="Enter Actor Age"><br><br>
            <label for="movies">Movies:</label><br>
            <input type="text" id="movies" name="movies" placeholder="Enter Actor Movies"><br><br>
            
            <input type="submit" value="Submit">
        </form>
    </div>
</body>
</html>
