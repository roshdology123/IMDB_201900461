<!DOCTYPE html>

<html lang="en">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/CSS/Site.css" rel="stylesheet" />

</head>
<body>
    <div>
        <div class="navbar">
            @RenderSection("navbar", true)
            <div class="navbar-container">

                <div class="logo-container"><img src="~/Content/Images/imdb-logo.svg" class="logo" alt="User Photo"></div>
                <div class="menu-container">
                    <ul class="menu-list">

                        <li class="menu-list-item search">
                            @using (Html.BeginForm("Search", "Search", FormMethod.Post))
                            {

                                <input size="50"  type="text" name="SearchValue" placeholder="Search.." />
                                <input class="SearchBTN" type="submit" value="Search">
                            }
                        </li>
                        <li class="menu-list-item"></li>
                        <li class="menu-list-item">Sign In</li>
                    </ul>
                </div>
                <div class="profile-container">
                    <img class="profile-picture" src="~/Content/Images/man.png" alt="">
                    <div class="profile-text-container">
                        <span class="profile-text">Profile</span>
                    </div>
                </div>
            </div>
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
</body>
</html>
