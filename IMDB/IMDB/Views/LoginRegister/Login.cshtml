
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IMDB Login</title>
    <link href="~/Content/CSS/login.css" rel="stylesheet" />
   
</head>
<body>
    <span class="Logo">
        <a href="HomePage.html"> <img src="https://images-na.ssl-images-amazon.com/images/G/01/imdb/authportal/images/www_imdb_logo._CB667618033_.png" alt="IMDb.com logo"></a>
    </span>

    <div class="All">
        <Form action="Home-Page.html" method="GET">
            <div id="Form-Details" class="Form-Details">
                <h1 class="a-spacing small"> Sign-In </h1>

                <div class="block">
                    <p>Email</p>
                    <input class="input" size="50" name=" Email" type="Email" id="Email" placeholder="Enter Your Email" required>
                </div>
                <div class="block">
                    <p>Password  </p>
                    <input class="input" size="50" name=" Password" type="password" id="Password" placeholder="at least 8 characters" maxlength="8" required>
                </div> <br> <br>

                <!--<input  id="submit-btn" class="Submit" type="submit" required> -->
                <button type="submit" id="submit-btn" class="Submit">Sign-In</button>
                <div class="register-Link">
                    <p>New to IMDb? <a href="register.html">Create your IMDb Account</a> </p>
                </div>
            </div>
        </Form>
</body>
</html>