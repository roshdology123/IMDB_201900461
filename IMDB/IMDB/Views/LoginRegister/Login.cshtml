@model IMDB.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IMDB Login</title>
    <link href="~/Content/CSS/login.css" rel="stylesheet" />

</head>
<body>
    <span class="Logo">
        <a href="HomePage.html"> <img src="https://images-na.ssl-images-amazon.com/images/G/01/imdb/authportal/images/www_imdb_logo._CB667618033_.png" alt="IMDb.com logo"></a>
    </span>

    <div class="All">
        @using (Html.BeginForm("Login", "LoginRegister", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
        <div class="Form-Details">
            <h1 class="a-spacing small"> Sign-In </h1>
            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(m => m.Email, new { @class = "textinput", size = "50" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(m => m.Password, new { @class = "textinput", size = "50" })

            </div>
            <input type="submit" id="submit-btn" class="Submit" required value="Sign-In" />
            <div class="register-Link">
                <p>New to IMDb? <a href="register.html">Create your IMDb Account</a> </p>
            </div>
        </div>
        }
    </div>
</body>
</html>